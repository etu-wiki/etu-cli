{
    "@context": "http://iiif.io/api/presentation/2/context.json",
    "@id": "{{{ baseUrl }}}/manifest.json",
    "@type": "sc:Manifest",
    "label": "{{ label }}",
    "sequences": [

        {
            "@id": "{{{ baseUrl }}}/s/2/{{ canvasUuid }}",
            "@type": "sc:Sequence",
            "label": "{{ label }}",
            "canvases": [
                {{#items}}
                {
                    "@id": "{{{ baseUrl }}}/c/2/{{ canvasUuid }}",
                    "@type": "sc:Canvas",
                    "label": "{{ label }}",
                    "thumbnail" : {
                        "@id" : "i/2/{{ etag }}/thumbnail.jpg",
                        "@type": "dctypes:Image",
                        "height": {{ thumbHeight }},
                        "width": {{ thumbWidth }}
                    },
                    "images": [
                        {
                            "@id": "{{{ baseUrl }}}/c/2/{{ canvasUuid }}/ap/p",
                            "@type": "oa:Annotation",
                            "motivation": "sc:painting",
                            "resource": {
                                "@id": "i/2/{{ etag }}{{^tile}}.jpg{{/tile}}",
                                "@type": "dctypes:Image",
                                "format": "image/jpeg",
                                "service": {
                                    "@context": "http://iiif.io/api/image/2/context.json",
                                    "@id": "i/2/{{ etag }}",
                                    "profile": "http://iiif.io/api/image/2/level2.json"
                                }
                            },
                            "on": "{{{ baseUrl }}}/c/2/{{ canvasUuid }}"
                        }
                    ],
                    "height": {{ height }},
                    "width": {{ width }}
                }{{^last}}, {{/last}}
                {{/items}}
            ]
        }
    ]
}