{
  "compileOnSave": true,
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2020",
    "lib": [
      "es2020", "DOM"
    ],
    "module": "ES2022", // (A)
    "moduleResolution": "Node", // (B)
    "strict": true,
    "sourceMap": true,
    // Needed for CommonJS modules
    "allowSyntheticDefaultImports": true, // (C)
    //
    "declaration": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
  "include": [
    "./src/**/*.ts",
    "src/**/*.json"
  ]
}

